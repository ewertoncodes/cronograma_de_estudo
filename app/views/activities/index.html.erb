<h1>Atividades</h1>

<table class="table table-striped">
<thead>
	<tr>
		<th>Nome</th>
		<th>Descrição</th>
		<th>Período</th>
	</tr>
</thead>
<tbody>
	<% @activities.each do |activity| %>
		<tr>
			<td><%= link_to activity.name, activity_path(activity.id) %></td>
			<td><%= activity.description %></td>
			<td><%= activity.period %></td>
		</tr>
	<% end %>
</tbody>
<tfoot>
	<tr>
		<td colspan="3">
			<%= link_to 'Voltar', root_path, class: "btn btn-primary" %>
		</td>
	</tr>
</tfoot>
</table>