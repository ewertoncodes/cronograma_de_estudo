<h2>Cadastrar Atividade</h2>

<%= form_for :activity, :html => {:class => 'form'}, url: activities_path do |f| %>
  <div class="form-group">
    <label for=""><%= f.label :name %></label>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <label for=""><%= f.label :description %></label>
    <%= f.text_area :description, class: "formatting" %>
  </div>
  <div class="form-group">
    <label for=""><%= f.label :period %></label>
    <%= f.text_field :period %>
  </div>
  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
   <i class="icon-ok icon-white"></i> Cadastrar
  <% end %>
<% end %>

<script>
  $(".formatting").jqte();
</script>