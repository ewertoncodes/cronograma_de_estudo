<h2>Cadastrar Atividade</h2>


<%#= form_for :activity do |f| %>
<%= form_for :activity, url: activities_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
